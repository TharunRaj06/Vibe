# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Azure Cosmos DB Configuration
COSMOS_DB_CONNECTION_STRING=your_cosmos_db_connection_string_here
COSMOS_DB_DATABASE_NAME=autoclaimai

# Azure Blob Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string_here
AZURE_STORAGE_CONTAINER_NAME=claim-images

# Azure Computer Vision Configuration
AZURE_COMPUTER_VISION_ENDPOINT=https://your-computer-vision-resource.cognitiveservices.azure.com/
AZURE_COMPUTER_VISION_KEY=your_computer_vision_api_key_here

# Email Service Configuration (Choose one)
# Option 1: Azure Communication Services
AZURE_COMMUNICATION_SERVICES_CONNECTION_STRING=your_acs_connection_string_here

# Option 2: SendGrid (Alternative)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@autoclaimai.com

# Fallback Database (for local development without Azure)
MONGODB_URI=mongodb://localhost:27017/autoclaimai
USE_COSMOS_DB=true

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
MAX_FILES_PER_CLAIM=5
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp

# Logging
LOG_LEVEL=info
